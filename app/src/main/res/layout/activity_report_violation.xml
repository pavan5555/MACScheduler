<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".report_violation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rplayout1"

        >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rpl"
    >
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/rprdgrp"
        android:layout_centerHorizontal="true" >

        <RadioButton
            android:id="@+id/rdbtn_noshw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="No Show"
            android:textSize="20sp"
            />
        <RadioButton
            android:id="@+id/rdbtn_violation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Violation"
            android:textSize="20sp"
             />

    </RadioGroup>

</RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rpl"
            android:layout_marginTop="10dp"
            android:id="@+id/rprlayout2"
            android:layout_centerHorizontal="true"
            android:visibility="gone">
            <EditText
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
               android:hint="Description of Violation"
                android:id="@+id/rp_descr"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rprlayout2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/rp_submit"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Submit"
                android:layout_centerHorizontal="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />




        </RelativeLayout>




    </RelativeLayout>
</ScrollView>